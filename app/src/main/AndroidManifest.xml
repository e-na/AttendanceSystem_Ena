<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ena.attendancesystem">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/attendence_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity.LoginPageActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".AttendanceActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".PhotoActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity android:name=".AttendanceDetailsActivity" />
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity" />
        <activity android:name=".PersonalDetailsActivity" />
        <activity android:name=".LoginActivity.FingerPrintActivity" />
        <activity android:name=".Atendance_Details_Activity"></activity>
    </application>

</manifest>