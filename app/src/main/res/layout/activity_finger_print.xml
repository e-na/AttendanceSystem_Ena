<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/colorBackground"
        tools:context=".FingerPrintLoginActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewBSNL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Bharat Sanchar Nigam Limited"
                android:textColor="#FAFAFA"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/page_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewBSNL"
                android:text="Attendance System"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="25sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/headerLayout"
                android:textColor="#FAFAFA"
                android:textSize="16sp"
                android:text="@string/note"
                android:layout_marginLeft="16dp"
                android:textAlignment="center"
                android:layout_marginRight="16dp"
                android:layout_marginTop="50dp"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/headerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/page_title"
                android:layout_marginTop="30dp">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/fingerprintlogin"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_fingerprint"
                    android:gravity="center"
                    android:textColor="#FAFAFA"
                    android:layout_marginTop="30dp"
                    android:textSize="24sp"/>

                <TextView
                    android:id="@+id/desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/desc_fingerprint"
                    android:textColor="#FAFAFA"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_margin="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FAFAFA"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="or"/>

                <TextView
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ff8c00"
                    android:textSize="17sp"
                    android:layout_marginTop="12dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_margin="16dp"
                    android:text="Login using Username and Password"/>

                <TextView
                    android:id="@+id/textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#FAFAFA"
                    android:textSize="16sp"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="16dp"
                    android:textAlignment="center"
                    android:layout_marginRight="16dp"/>

                <TextView
                    android:id="@+id/errorText"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textColor="#D50000"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="16dp"
                    android:textAlignment="center"
                    android:layout_marginRight="16dp"/>
            </LinearLayout>


        </RelativeLayout>
    </ScrollView>
</android.support.v4.widget.SwipeRefreshLayout>