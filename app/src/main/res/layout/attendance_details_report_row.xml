<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FAFAFA">


        <TextView
            android:id="@+id/textViewTaskName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textColor="#5a5c5c"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewTaskDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewTaskName"
            android:layout_weight="2"
            android:singleLine="true"
            android:textColor="#5a5c5c"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textViewTaskPriority"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewTaskDescription"
            android:textColor="#5a5c5c"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewTaskPertainsTo"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewTaskPriority"
            android:textColor="#5a5c5c"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold" />


    </RelativeLayout>
</RelativeLayout>